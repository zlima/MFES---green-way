	--add money to card
	public addBalance: CardBalance ==> ()
	addBalance(balan) ==(
		balance := balance+balan;
		)
		pre balan > 0
		post balance > 0 and balance > balance~;
	
	
	public addDevice: DeviceID ==> ()
	addDevice(deviceid_) ==(
	
	devices := [deviceid_] ^ devices;
	
	)
	pre deviceid_ not in set elems devices 
	post len devices > len devices~;
	

