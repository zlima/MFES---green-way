public User : UserID * Name * CardBalance ==> User
	User(ID,name_,cardbalance_) == (
	
	userid := ID;
	name := name_;
	devices := [];
	balance := cardbalance_;
	return self;
	)
	pre len name_ > 0 and cardbalance_ >= 0
